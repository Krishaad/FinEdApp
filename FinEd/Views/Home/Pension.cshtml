@{
    ViewData["Title"] = "Pensions";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h1>Pensions Overview</h1>

        <a asp-controller="Home" asp-action="PensionSection1" class="btn btn-primary">Section 1</a>
        <a asp-controller="Home" asp-action="PensionSection2" class="btn btn-primary">Section 2</a>
        <a asp-controller="Home" asp-action="PensionSection3" class="btn btn-primary">Section 3</a>
    </div>


    <style>
        .container {
            margin: 20px auto;
            max-width: 800px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #2C3E50;
            font-size: 36px;
            margin-bottom: 20px;
        }

        .btn {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            text-align: center;
            display: inline-block;
            margin-right: 10px;
            text-decoration: none;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #2C3E50;
            color: white;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1a2533;
            }
    </style>
   
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewBag.Title = "Pension Quiz";
    }

    <div class="container">
        <h1>Pension Knowledge Quiz</h1>
        <p>Test your knowledge about pensions by answering the following questions.</p>

        <form id="pensionQuiz">
            <!-- Question 1 -->
            <div class="quiz-question">
                <h3>1. What is a pension?</h3>
                <div>
                    <input type="radio" id="q1a" name="q1" value="a">
                    <label for="q1a">A retirement plan that provides a monthly income after you retire.</label>
                </div>
                <div>
                    <input type="radio" id="q1b" name="q1" value="b">
                    <label for="q1b">A savings account for short-term goals.</label>
                </div>
                <div>
                    <input type="radio" id="q1c" name="q1" value="c">
                    <label for="q1c">A government bond.</label>
                </div>
            </div>

            <!-- Question 2 -->
            <div class="quiz-question">
                <h3>2. Which of the following is NOT a type of pension?</h3>
                <div>
                    <input type="radio" id="q2a" name="q2" value="a">
                    <label for="q2a">State Pension</label>
                </div>
                <div>
                    <input type="radio" id="q2b" name="q2" value="b">
                    <label for="q2b">Workplace Pension</label>
                </div>
                <div>
                    <input type="radio" id="q2c" name="q2" value="c">
                    <label for="q2c">Investment Pension</label>
                </div>
            </div>

            <!-- Question 3 -->
            <div class="quiz-question">
                <h3>3. Why is contributing to a pension important?</h3>
                <div>
                    <input type="radio" id="q3a" name="q3" value="a">
                    <label for="q3a">It provides financial security in retirement.</label>
                </div>
                <div>
                    <input type="radio" id="q3b" name="q3" value="b">
                    <label for="q3b">It reduces your tax burden.</label>
                </div>
                <div>
                    <input type="radio" id="q3c" name="q3" value="c">
                    <label for="q3c">Both A and B.</label>
                </div>
            </div>

            <!-- Question 4 -->
            <div class="quiz-question">
                <h3>4. When can you typically start accessing your pension?</h3>
                <div>
                    <input type="radio" id="q4a" name="q4" value="a">
                    <label for="q4a">At age 45</label>
                </div>
                <div>
                    <input type="radio" id="q4b" name="q4" value="b">
                    <label for="q4b">At age 55</label>
                </div>
                <div>
                    <input type="radio" id="q4c" name="q4" value="c">
                    <label for="q4c">At age 65</label>
                </div>
            </div>

            <!-- Question 5 -->
            <div class="quiz-question">
                <h3>5. What should you consider when planning your pension?</h3>
                <div>
                    <input type="radio" id="q5a" name="q5" value="a">
                    <label for="q5a">Your desired retirement age</label>
                </div>
                <div>
                    <input type="radio" id="q5b" name="q5" value="b">
                    <label for="q5b">Your lifestyle and other income sources</label>
                </div>
                <div>
                    <input type="radio" id="q5c" name="q5" value="c">
                    <label for="q5c">All of the above</label>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="quiz-submit">
                <button type="button" onclick="checkAnswers()">Submit Quiz</button>
            </div>
        </form>

        <!-- Result Display -->
        <div id="quizResult" style="display:none;">
            <h2>Your Score: <span id="score"></span>/5</h2>
            <p id="resultMessage"></p>
        </div>
    </div>

</body>


<script>
    function checkAnswers() {
        let score = 0;

        // Question 1
        if (document.querySelector('input[name="q1"]:checked').value === "a") score++;

        // Question 2
        if (document.querySelector('input[name="q2"]:checked').value === "c") score++;

        // Question 3
        if (document.querySelector('input[name="q3"]:checked').value === "c") score++;

        // Question 4
        if (document.querySelector('input[name="q4"]:checked').value === "b") score++;

        // Question 5
        if (document.querySelector('input[name="q5"]:checked').value === "c") score++;

        // Display Result
        document.getElementById("score").innerText = score;
        let resultMessage = "";

        if (score === 5) {
            resultMessage = "Excellent! You have a great understanding of pensions.";
        } else if (score >= 3) {
            resultMessage = "Good job! You have a solid understanding of pensions.";
        } else {
            resultMessage = "It looks like you might need to review some of the pension information again.";
        }

        document.getElementById("resultMessage").innerText = resultMessage;
        document.getElementById("quizResult").style.display = "block";
    }
</script>

